{
  "name": "denoise-plugin",
  "version": "1.0.0",
  "description": "A WebAssembly module implementing noise suppression for web frontends with full WASM support.",
  "type": "module",
  "repository": "https://artifactory.oci.oraclecorp.com/api/npm/cgbu_ecprt-dev-npm-local/",
  "license": "Apache-2.0",
  "author": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:js",
    "build:js": "npm run build:worklet && npm run build:rollup",
    "build:worklet": "webpack --config webpack.worklet.config.js",
    "build:rollup": "rollup -c rollup.config.cjs",
    "clean": "tsc --build --clean",  
    "publish": "tsc --build tsconfig.json && npm publish",
    
    "build:all": "npm run build:wasm && npm run build:js",
    "build:wasm": "npm run build:rnnoise && npm run build:deepfilternet",
    "build:rnnoise": "npm run build:dockerimage && npm run build:emscripten",
    "build:deepfilternet": "bash ./build-deepfilternet-wasm.sh",
    "build:dockerimage": "docker image inspect -f '.' emscripten-autotools || docker build -t emscripten-autotools .",
    "build:emscripten": "docker run --rm -v $(pwd):/src emscripten-autotools bash -x ./build-rnnoise-wasm.sh",

    "lint": "publint"
  },
  "files": [
    "dist",
    "src",
    "package.json",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./dist/index.js": "./dist/index.js"
  },
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-url": "^8.0.2",
    "@rollup/plugin-wasm": "^6.2.2",
    "@types/audioworklet": "^0.0.77",
    "@types/node": "^24.0.13",
    "publint": "^0.3.12",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-loader": "^9.5.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "webpack": "^5.100.1",
    "webpack-cli": "^6.0.1",
    "livekit-client": "https://artifactory-builds.oci.oraclecorp.com/cgbu_ecprt-release-npm-local/ecprt-livekit-client-sdk-js/ecprt-client-sdk-25.3.8.tgz"
  },
  "dependencies": {
    "fflate": "^0.8.2"
  }
}
